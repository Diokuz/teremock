{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "ES2020",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "declaration": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*"
  ]
}
